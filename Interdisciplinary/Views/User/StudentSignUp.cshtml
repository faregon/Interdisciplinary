@model Interdisciplinary.Models.User
@{
    ViewBag.Title = "StudentSignUp";
}

<h2>StudentSignUp</h2>

<div>
    @using (Html.BeginForm("StudentSignUp", "User", FormMethod.Post, new { @class = "signupform-student" }))
    {
        @Html.AntiForgeryToken()
        @Html.LabelFor(x => x.FirstName)
        @Html.TextBoxFor(x => x.FirstName)
        @Html.LabelFor(x => x.LastName)
        @Html.TextBoxFor(x => x.LastName)
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password)
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email)
        @Html.LabelFor(x => x.Birthday)
        @Html.TextBoxFor(x => x.Birthday)
        @Html.LabelFor(x => x.Phone)
        @Html.TextBoxFor(x => x.Phone)
        @Html.LabelFor(x => x.City)
        @Html.TextBoxFor(x => x.City)
        @Html.LabelFor(x => x.Adress)
        @Html.TextBoxFor(x => x.Adress)
        @Html.ValidationSummary()
        <input type="submit" value="submit" />
    }
</div>